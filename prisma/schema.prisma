// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  productor
  student
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password_hash String
  cpf           String?  @unique
  role          Role     @default(student)
  created_at    DateTime @default(now())

  courses     Course[]
  courseUsers CourseUser[]

  @@map("users")
}

model Course {
  id              String   @id @default(uuid())
  title           String
  description     String
  slug            String   @unique
  access_time     Int
  banner_filename String
  subjects        String[]

  user         User   @relation(fields: [productor_id], references: [id])
  productor_id String

  courseUsers  CourseUser[]
  classModules ClassModule[]

  @@map("courses")
}

model CourseUser {
  id                String   @id @default(uuid())
  access_expires_in DateTime
  created_at        DateTime @default(now())
  updated_at        DateTime @updatedAt

  user      User   @relation(fields: [studentId], references: [id])
  studentId String @map("student_id")

  course   Course @relation(fields: [courseId], references: [id])
  courseId String @map("course_id")

  @@map("course_users")
}

model ClassModule {
  id          String @id @default(uuid())
  title       String
  description String
  order       Int

  course   Course @relation(fields: [courseId], references: [id])
  courseId String @map("course_id")

  classes Class[]

  @@map("class_modules")
}

model Class {
  id          String @id @default(uuid())
  title       String
  description String
  slug        String
  video_embed String

  classModule   ClassModule @relation(fields: [classModuleId], references: [id])
  classModuleId String      @map("class_module_id")

  complementaryMaterials ComplementaryMaterial[]

  @@map("classes")
}

model ComplementaryMaterial {
  id       String @id @default(uuid())
  filename String

  class   Class  @relation(fields: [classId], references: [id])
  classId String @map("class_id")

  @@map("complementary_materials")
}
